{
  "ts-node": {
    "compilerOptions": {
      "module": "NodeNext",
      "sourceMap": true,
      "alwaysStrict": true,
      "strict": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitOverride": true,
      "noImplicitThis": true,
      "jsx": "preserve"
    }
  },
  "compilerOptions": {
    "outDir": "./ts/",
    "sourceMap": true,
    "alwaysStrict": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noImplicitThis": true,
    "module": "CommonJS",
